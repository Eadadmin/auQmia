@model PetShopMVC.Models.ViewModels.ClienteFormViewModel
@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Cliente.Id" />
            <div class="form-group">
                <label asp-for="Cliente.Name" class="control-label"></label>
                <input asp-for="Cliente.Name" class="form-control" />
                <span asp-validation-for="Cliente.Name" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefone" class="control-label"></label>
                <input asp-for="Cliente.Telefone" class="form-control" />
                <span asp-validation-for="Cliente.Telefone" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Endereco" class="control-label"></label>
                <input asp-for="Cliente.Endereco" class="form-control" />
                <span asp-validation-for="Cliente.Endereco" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.ServicoId" class="control-label"></label>
                <select asp-for="Cliente.ServicoId" asp-items="@(new SelectList(Model.Servicos,"ID",
                    "Name"))" class="form-control"></select>
                <span asp-validation-for="Cliente.ServicoId" class=" text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

